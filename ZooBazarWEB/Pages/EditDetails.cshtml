@page
@model ZooBazaarWebApp.Pages.EditProfileModel
@{
}

<h1>Edit User</h1>

<section class="text-dark pb-5">
    <div class="container">
        <div class="row justify-content-center mt-5 pt-4">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow p-4">
                    <form method="post">
                        <!-- Personal Information -->
                        <div class="mb-3">
                            <h4 class="pt-4 mb-3">Personal Information</h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="employee.FirstName">First Name</label>
                                    <input asp-for="employee.FirstName" type="text" class="form-control" value="@Model.employee.FirstName" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="employee.LastName">Last Name</label>
                                    <input asp-for="employee.LastName" type="text" class="form-control" value="@Model.employee.LastName" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="employee.EmailAddress">Email</label>
                                    <input type="email" asp-for="employee.EmailAddress" class="form-control" value="@Model.employee.EmailAddress" />
                                </div>
                            </div>
                        </div>

                        <!-- Address Information -->
                        <div class="mb-3">
                            <h4 class="pt-4 mb-3">Address Information</h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="employee.Address">Address</label>
                                    <input asp-for="employee.Address" type="text" class="form-control" value="@Model.employee.Address" />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="employee.ContactInfo">Phone Number</label>
                                    <input type="tel" asp-for="employee.ContactInfo" class="form-control" value="@Model.employee.ContactInfo" />
                                </div>
                            </div>
                        </div>

                      
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block my-4 earth-yellow">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @if (Model.ErrorMessages.Any())
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in Model.ErrorMessages)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="text-center me-5">
                    <a asp-page="/Details" class="btn btn-primary mt-4 me-5 earth-yellow">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}