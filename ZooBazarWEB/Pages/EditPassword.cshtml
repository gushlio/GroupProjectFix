@page
@model ZooBazaarWebApp.Pages.EditPasswordModel
@{
}

<h1>Change Password</h1>


<section class="text-dark pb-5">
    <div class="container">
        <div class="row align-items-center justify-content-center mt-5 pt-5">
            <div class="col-lg-6 col-md-6">
                <div class="card shadow p-4">
                    <h1 class="text-center mb-4">Change Password</h1>
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label">Old Password</label>
                            <input type="password" class="form-control" id="exampleInputEmail1" asp-for="OldPassword" aria-describedby="emailHelp" placeholder="Enter your old password">
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" asp-for="NewPassword" placeholder="Enter your new password">
                        </div>
                        @if (!ModelState.IsValid)
                        {

                            <div class="error-message" style="color:red">

                                @Html.ValidationMessage("emailblabla")
                            </div>
                        }
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block mt-4 earth-yellow">Change Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="text-center ms-5 ps-2">
                    <a asp-page="/Details" class="btn btn-primary mt-5 ms-5 earth-yellow">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</section>