@page
@model ZooBazarWEB.Pages.AnimalsModel
@{
}

<section class="bg-white text-dark p-5 pt-lg-5 text-center text-sm-start">
    <div class="container">
        <h1 class="mb-4">Animals in the Zoo</h1>
        <div class="row">
            @foreach (var animal in Model.Animals)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 pb-5">
                    <div class="card h-100">
                        <img src="~/img/@animal.imgURL.Split('\\')[1]" alt="@animal.imgURL.Split('\\')[1]" class="card-img-top" />
                        <div class="card-body">
                            <p class="card-text"><strong>Species:</strong> @animal.species</p>
                            <p class="card-text"><strong>Date of Birth:</strong> @animal.dateOfBirth</p>
                            <p class="card-text"><strong>Location:</strong> @animal.locationName</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>